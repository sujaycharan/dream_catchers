<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dream Catchers Foundation</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- Header Section -->
  <header>
    <div class="container">
      <div class="logo-heading">
        <img src="/images/logo.png" alt="Dream Catchers Logo" class="logo" />
        <h1>Dream Catchers Foundation</h1>
      </div>
      <nav>
        <ul>
          <li><a href="/home">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/course">Courses</a></li>
          <li><a href="/admission">Admissions</a></li>
          <li><a href="/support">Support</a></li>

          <% if (session.user) { %>
            <!-- User Logged In: Show User Icon + Logout -->
            <li>
              <img src="/images/user-icon.png" alt="User Icon" class="user-icon" />
              <form action="/logout" method="post" style="display:inline;">
                <button type="submit" class="logout-button">Logout</button>
              </form>
            </li>
          <% } else { %>
            <!-- Not Logged In: Show Login Button -->
            <li><a href="/login" class="button">Login</a></li>
          <% } %>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Image Slider Section -->
  <div class="slider">
    <div class="slides">
      <img src="/images/image1.jpg" alt="Image 1" class="slide" />
      <img src="/images/image2.jpg" alt="Image 2" class="slide" />
      <img src="/images/image3.jpg" alt="Image 3" class="slide" />
      <img src="/images/image5.jpg" alt="Image 4" class="slide" />
      <img src="/images/image6.jpg" alt="Image 5" class="slide" />
      <img src="/images/image7.jpg" alt="Image 6" class="slide" />
      <img src="/images/image8.jpg" alt="Image 7" class="slide" />
    </div>

    <!-- Slider Controls -->
    <button class="prev" onclick="moveSlide(-1)" aria-label="Previous Slide">&#10094;</button>
    <button class="next" onclick="moveSlide(1)" aria-label="Next Slide">&#10095;</button>
  </div>

  <script src="/script.js"></script>
</body>
</html>
